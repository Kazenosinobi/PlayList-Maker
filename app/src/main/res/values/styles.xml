<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/buttonBackgroundColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4dp</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="android:elevation">@dimen/_0dp</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="tint">?attr/iconColor</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    
    <style name="TextViewToolbarStyle">
        <item name="android:paddingStart">@dimen/_24dp</item>
        <item name="android:textColor">?attr/settingsToolbarTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingHorizontal">@dimen/_4dp</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="thumbTint">@color/thumb_color_selector</item>
        <item name="trackTint">@color/track_color_selector</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginVertical">@dimen/_16dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="tint">?attr/searchIconColor</item>
        <item name="android:hint">@string/text_search</item>
        <item name="android:textColorHint">?attr/searchTextHintColor</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingVertical">@dimen/_8dp</item>
        <item name="android:paddingHorizontal">@dimen/_36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
        <item name="android:textColor">?attr/searchTextColor</item>
    </style>

    <style name="imageViewSearchClearStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingHorizontal">@dimen/_28dp</item>
        <item name="tint">?attr/clearColor</item>
    </style>

</resources>