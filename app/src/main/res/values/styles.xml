<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/buttonBackgroundColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="cornerRadius">@dimen/_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/_4dp</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="android:elevation">@dimen/_0dp</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="PlayListButtonCreateStyle">
        <item name="android:layout_marginBottom">@dimen/_32dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/playListButtonCreate</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="tint">?attr/iconColor</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:paddingHorizontal">@dimen/_16dp</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/iconColor</item>
    </style>

    <style name="TextViewToolbarStyle">
        <item name="android:textColor">?attr/settingsToolbarTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/_12dp</item>
        <item name="android:paddingVertical">@dimen/_24dp</item>
        <item name="thumbTint">@color/thumb_color_selector</item>
        <item name="trackTint">@color/track_color_selector</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:text">@string/black_topic</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="EditTextSearchStyle">
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:layout_marginVertical">@dimen/_16dp</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="tint">?attr/searchIconColor</item>
        <item name="android:hint">@string/text_search</item>
        <item name="android:textColorHint">?attr/searchTextHintColor</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingVertical">@dimen/_8dp</item>
        <item name="android:paddingHorizontal">@dimen/_36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
        <item name="android:textColor">?attr/searchTextColor</item>
    </style>

    <style name="imageViewSearchClearStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginHorizontal">@dimen/_28dp</item>
        <item name="tint">?attr/clearColor</item>
    </style>

    <style name="SearchAlbumImageViewStyle">
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:layout_marginStart">@dimen/_12dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>
    </style>

    <style name="PlayListCreateEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginVertical">@dimen/_16dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">?attr/playListCreateEditTextHintColor</item>
        <item name="android:textColor">?attr/playListCreateEditTextHintColor</item>
    </style>

    <style name="SearchTrackNameTextViewStyle">
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/SearchTrackNameTextColor</item>
    </style>

    <style name="SearchArtistNameTextViewStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">?attr/SearchArtistNameTextColor</item>
    </style>

    <style name="SearchTrackTimeTextViewStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">?attr/SearchTrackTimeTextColor</item>
    </style>

    <style name="ErrorTextViewStyle">
        <item name="android:paddingVertical">@dimen/_16dp</item>
        <item name="android:textColor">?attr/errorTextViewColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="reconnectButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/reconnectButtonBackGroundColor</item>
        <item name="android:paddingVertical">@dimen/_8dp</item>
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/reconnectButtonTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="cornerRadius">@dimen/_56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="SearchHistoryTextViewStyle">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:paddingVertical">@dimen/_16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/searchHistoryTextViewColor</item>
    </style>

    <style name="clearHistoryButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/searchHistoryButtonBackGroundColor</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:layout_marginVertical">@dimen/_24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/searchHistoryButtonTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="cornerRadius">@dimen/_56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="MediaTrackNameTextViewStyle">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">?attr/SearchTrackNameTextColor</item>
    </style>

    <style name="MediaArtistNameTextViewStyle">
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">?attr/SearchTrackNameTextColor</item>
    </style>

    <style name="PlayTimeTextViewStyle">
        <item name="android:textColor">?attr/playTimeTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">@dimen/_4dp</item>
        <item name="android:layout_marginBottom">@dimen/_32dp</item>
    </style>

    <style name="MediaDescriptionsTextViewStyle">
        <item name="android:layout_marginVertical">@dimen/_8dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">?attr/mediaDescriptionsTextColor</item>
    </style>

    <style name="MediaDescriptionsDataTextViewStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">middle</item>
        <item name="layout_constraintWidth_percent">0.7</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">?attr/mediaDescriptionsDataTextColor</item>
    </style>

    <style name="newPlaylistButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/newPlaylistButtonBackGroundColor</item>
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:layout_marginVertical">@dimen/_24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/newPlaylistButtonTextColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="cornerRadius">@dimen/_56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
    </style>

    <style name="MediaLibraryErrorTextViewStyle">
        <item name="android:layout_marginHorizontal">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:textColor">?attr/errorTextViewColor</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabRippleColor">?attr/customTabRippleColor</item>
        <item name="tabBackground">@drawable/ripple_effect</item>
        <item name="android:background">?attr/customTabBackGroundColor</item>
        <item name="tabTextColor">?attr/customTabTextColor</item>
        <item name="tabIndicatorColor">?attr/customTabIndicatorColor</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavTextAppearanceActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="BottomNavTextAppearanceInactive">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">?attr/bottomNavigationBackground</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearanceInactive</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearanceActive</item>
        <item name="itemRippleColor">@color/bottom_navigation_ripple</item>
    </style>

</resources>